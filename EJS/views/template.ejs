        </section>
        <section id="why-us">
            <h5>Why Us</h5>
            <ul>
                <% whyUsData.forEach(function(item) { %>
                    <li>
                        <%= item %>
                    </li>
                    <% }) %>
            </ul>
        </section>
    </main>
